<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/generalui_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

         <PreferenceScreen
            android:key="battery_bar_options"
            android:fragment="com.android.settings.turbo.BatteryBar"
            android:title="@string/battery_bar_title"
            android:summary="@string/battery_bar_summary" />

       <ListPreference
       	android:key="lcd_density"
        android:title="@string/lcd_density"
        android:persistent="false" />
	    
         <PreferenceScreen
            android:key="expanded_desktop"
            android:fragment="com.android.settings.applications.ExpandedDesktopPreferenceFragment"
            android:summary="@string/expanded_desktop_summary"
            android:title="@string/expanded_desktop_category" />

         <PreferenceScreen
            android:key="gestures"
            android:fragment="com.android.settings.turbo.GestureSettings"
            android:title="@string/gestures_category" 
            android:summary="@string/gestures_summary" />

</PreferenceScreen>
