<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/statusbar_notifications_category" >

    <PreferenceCategory
        android:key="breathing_notifications"
        android:title="@string/breathing_notifications_category" >

	<SwitchPreference
            android:key="missed_call_breath"
            android:title="@string/missed_call_breath_title"
            android:summary="@string/missed_call_breath_summary"
            android:defaultValue="false" />

	<SwitchPreference
            android:key="sms_breath"
            android:title="@string/sms_breath_title"
            android:summary="@string/sms_breath_summary"
            android:defaultValue="false" />

	<SwitchPreference
            android:key="voicemail_breath"
            android:title="@string/voicemail_breath_title"
            android:summary="@string/voicemail_breath_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/general_category" />

    <com.android.settings.preference.SystemSettingSwitchPreference
        android:key="status_bar_notif_count"
        android:title="@string/status_bar_notif_count_title"
        android:summary="@string/status_bar_notif_count_summary"
        android:defaultValue="false" />

    <!-- Shake to clean notifications -->
     <com.android.settings.preference.SystemSettingSwitchPreference
        android:key="shake_to_clean_notifications"
        android:title="@string/shake_to_clean_notifications_title"
        android:summary="@string/shake_to_clean_notifications_summary"
        android:defaultValue="false" />

    <com.android.settings.preference.SystemSettingSwitchPreference
        android:key="toast_icon"
	    android:title="@string/toast_icon_title"
	    android:summary="@string/toast_icon_summary" />
   
	<PreferenceCategory
        android:key="notification_cat_colors"
        android:title="@string/colors_title">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
           android:key="notification_icon_color"
           android:title="@string/notification_icon_color_title"
           android:defaultValue="#ffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
           android:key="notification_icon_color_dark_mode"
           android:title="@string/color_dark_mode_title"
           android:defaultValue="#ff000000" />

    </PreferenceCategory>

</PreferenceScreen>
